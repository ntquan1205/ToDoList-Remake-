<Window x:Class="ToDoList_Remake_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList_Remake_"
        mc:Ignorable="d"
        Title="ToDoList" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition  Height="auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgToDoApp" 
                  Grid.Row="0" 
                  ItemsSource="{Binding AllTodos}" 
                  FontSize="14" 
                  FontWeight="Normal" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" IsReadOnly="false"  Header="Задача" Width="400"/>
                <DataGridTextColumn Binding="{Binding Path=Priority}" IsReadOnly="false" Header="Приоритет" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path=Category}" IsReadOnly="false" Header="Категория" Width="100"/>
                <DataGridTextColumn Binding="{Binding Path=DueDate, StringFormat='dd/MM/yyyy'}" IsReadOnly="false" Header="Срок выполнения" Width="200"/>
                <DataGridCheckBoxColumn Binding="{Binding Path=IsDone, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="false" Header="Выполнена ли она" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="NewToDoTextBox" Width="300" Margin="5"/>
            <ComboBox x:Name="PriorityComboBox" Width="80" Margin="5" SelectedIndex="2">
                <ComboBoxItem>1</ComboBoxItem>
                <ComboBoxItem>2</ComboBoxItem>
                <ComboBoxItem>3</ComboBoxItem>
                <ComboBoxItem>4</ComboBoxItem>
                <ComboBoxItem>5</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="CategoryComboBox" Width="100" Margin="5" SelectedIndex="0">
                <ComboBoxItem>Работа</ComboBoxItem>
                <ComboBoxItem>Домашняя</ComboBoxItem>
                <ComboBoxItem>Учеба</ComboBoxItem>
                <ComboBoxItem>Семейная</ComboBoxItem>
                <ComboBoxItem>Другие</ComboBoxItem>
            </ComboBox>
            <DatePicker x:Name="DueDatePicker" Width="120" Margin="5"/>
            <Button Content="Добавлять" Click="AddButton_clicked" Margin="5" Padding="10,5"/>
            <Button Content="Удалять" Click="DeleteButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Window>
